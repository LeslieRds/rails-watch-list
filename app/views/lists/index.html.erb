<div class="container">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/ddt8brfwz/image/upload/v1686901868/cld-sample.jpg);">
    <div class="container">
      <h1>My Fabulous movie lists!</h1>
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat"%>
    </div>
  </div>


  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url:<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY", width: 400, height: 300, crop: :fill) %>" >
        <div class="co-12 col-sm-6 col-md-4 mb-3">
          <%= link_to list_path(list), class:"text-decoration-none" do %>
              <%= list.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>
