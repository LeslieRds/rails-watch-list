<div class="container">
  <h1>My fabulous lists of movies</h1>
    <%= link_to "Create a movie list", new_list_path %>
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY", width: 400, height: 300, crop: :fill) %>
        <%= link_to list_path(list), class:"text-decoration-none" do %>
            <%= list.name %>
        <% end %>
      </div>
    <% end %>
</div>
