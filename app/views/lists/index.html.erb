<div class="container">
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/ddt8brfwz/image/upload/v1686901868/cld-sample.jpg);">
  <div class="container">
    <h1>My<strong>Fabulous</strong> movie lists!</h1>
    <a class="btn btn-flat" <%= link_to new_list_path %>>Create a new movie list</a>
  </div>
</div>


    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY", width: 400, height: 300, crop: :fill) %>
        <%= link_to list_path(list), class:"text-decoration-none" do %>
            <%= list.name %>
        <% end %>
      </div>
    <% end %>
</div>
